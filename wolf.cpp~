#include "wolf.h" 
#include <QGraphicsPixmapItem> 
#include <QPixmap> 
#include <iostream> 
#include <QtGui/QApplication> 
#include <cstdlib> 
#include <cmath> 
using namespace std; 

Wolf::Wolf() {

//I want to make it so that the wolf is generated at random y positions 
//y needs to be within range from 0 to 350; 
 	y_ = rand() % 350; 
 	x_ = 700; 	
 	QGraphicsPixmapItem::setPos(x_,y_); 
} 

void Wolf::move() {
 	x_ = x_ -2; 
 	QGraphicsPixmapItem::setPos(x_, y_); 
 	if (x_ == -700 && y_ == 0) {
 		cout <<"need new wolf" << endl; 
 	} 
} 
